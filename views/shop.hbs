<main>
  {{#if hasProducts}}
    {{#each prods}}
      <div class="card container-card">
        <h1 class="title-card">
          {{this.title}}
        </h1>
        <img
          src="https://i.pinimg.com/736x/5f/82/fa/5f82faacd6b544ad86d2fc3fe9e8c431.jpg"
          alt="https://i.pinimg.com/736x/5f/82/fa/5f82faacd6b544ad86d2fc3fe9e8c431.jpg"
          class="img-fluid"
        />
        <p class="description-card">
          Đây là cái card
        </p>
        <button class="btn-card">Mua ngay</button>
      </div>
    {{/each}}
  {{else}}
    <h2>Không có sản phẩm</h2>
  {{/if}}
</main>