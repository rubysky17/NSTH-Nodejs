<!DOCTYPE html>
<html lang="en">
  <%- include('../includes/head') %>

  <body>
    <%- include('../includes/navigator')%>

    <main>
      <div class="container">
        <h1>Danh sách sản phẩm</h1>
        <p>Danh sách tất cả sản phẩm</p>

        <div class="row">
          <% if (prods.length > 0) { %> <% for (let product of prods ) { %>

          <div class="card col-4 m-3" style="width: 18rem">
            <img
              src="<%= product.imageUrl %>"
              class="card-img-top"
              alt="<%= product.title %>"
            />
            <div class="card-body">
              <h5 class="card-title"><%= product.title %></h5>

              <p class="card-text">$<%= product.price %></p>

              <p class="card-text"><%= product.description %></p>

              <a href="/product/<%= product.id %>" class="btn btn-secondary"
                >Xem chi tiết</a
              >

              <form action="/cart" method="post" class="mt-3">
                <button type="submit" class="btn btn-primary">
                  Thêm giỏ hàng
                </button>

                <input
                  type="hidden"
                  name="productId"
                  value="<%= product.id %>"
                />
              </form>
            </div>
          </div>

          <% } %> <% } else { %>

          <h1>Không có sản phẩm nào</h1>

          <% } %>
        </div>
      </div>
    </main>
  </body>
</html>
